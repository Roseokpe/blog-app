<div class="drop-shadow">
  <h3 class=" font-bold"><%= post.title %> #<%= post.id %></h3>
  <% text_body = post.text.split(".").first(4).join(".") %>
  <h4>
    <%= text_body %>.
  </h4>
  <p class="font-bold">Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
  <%= form_with url: "/users/#{post.author_id}/posts/#{post.id}/likes" do |form| %>
    <%= form.submit "Like" %>
  <% end %>
  <%= link_to 'add comment', new_user_post_comment_path(post.author_id, post.id) %>
</div>

